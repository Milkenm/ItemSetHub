<UserControl x:Class="Hub_Ui.Elements.ItemsBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hub_Ui.Elements"
             mc:Ignorable="d" Height="91" Width="408" SizeChanged="OnSizeChanged">
	<Grid>
		<TextBox x:Name="textBox_title" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="385" BorderBrush="White" VerticalContentAlignment="Center" Padding="5,0,0,0" VerticalScrollBarVisibility="Disabled"/>
		<Button x:Name="button_delete" Content="X" HorizontalAlignment="Left" Margin="385,0,0,0" VerticalAlignment="Top" Width="23" Height="23" BorderBrush="White" Background="White"/>
		<WrapPanel x:Name="wrapPanel_items" Height="68" Margin="0,23,0,0" VerticalAlignment="Top" Background="#FFE0E0E0" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Width="408">
			<WrapPanel.Resources>
				<Style TargetType="{x:Type local:ItemRender}">
					<Setter Property="Margin" Value="2,2" />
				</Style>
			</WrapPanel.Resources>
		</WrapPanel>
	</Grid>
</UserControl>
